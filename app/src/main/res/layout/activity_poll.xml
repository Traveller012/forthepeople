<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.harish.forthepeople.Poll">


    <TextView
        android:padding="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Whom do you think won the debate?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/politician1"

        android:layout_below="@+id/textView"
        android:layout_marginRight="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ben_carson" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/politician2"

        android:layout_marginRight="7dp"
        android:layout_alignTop="@+id/politician1"
        android:layout_toRightOf="@+id/politician1"
        android:layout_toEndOf="@+id/politician1"
        android:background="@drawable/donald_trump"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/politician3"

        android:layout_marginLeft="7dp"
        android:layout_alignTop="@+id/politician2"
        android:layout_toRightOf="@+id/politician2"
        android:layout_toEndOf="@+id/politician2"
        android:background="@drawable/carly_fi"/>

    <TextView
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How would you rate your moderator?"
        android:id="@+id/moderatorRateTextView"
        android:layout_below="@+id/politician1"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/moderatorRateTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See who won!"
        android:id="@+id/pollResults"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
